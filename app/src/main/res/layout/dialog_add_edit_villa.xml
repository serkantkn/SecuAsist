<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_window"
    android:id="@+id/blur_window"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/windowTitle"
            android:text="Villa Ekle"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/windowTitle"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etVillaNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Villa Numarası"
                    android:textColorHint="@color/textColorSecondary"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:minEms="5"
                    android:background="@drawable/background_edittext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/etVillaNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Notlar"
                    android:textColorHint="@color/textColorSecondary"
                    android:textColor="@color/white"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top|start"
                    android:background="@drawable/background_edittext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/etVillaNo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_villa_street"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Sokak / Cadde"
                    android:textColorHint="@color/textColorSecondary"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etVillaNotes">

                    <AutoCompleteTextView
                        android:id="@+id/actv_villa_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@drawable/background_edittext"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/etVillaNavigationA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="A Kapısından Navigasyon Bilgisi"
                    android:textColorHint="@color/textColorSecondary"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:background="@drawable/background_edittext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/til_villa_street"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etVillaNavigationB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="B Kapısından Navigasyon Bilgisi"
                    android:textColorHint="@color/textColorSecondary"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:background="@drawable/background_edittext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/etVillaNavigationA"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_villa_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etVillaNavigationB"
                    app:singleLine="false"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_under_construction"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tadilatta"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_special"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Özel Villa"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_rental"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kiralık"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_call_from_home"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evden Aranabilir"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_call_for_cargo"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        android:text="Kargo İçin Arama"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_is_empty"
                        style="@style/Widget.App.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boş"/>

                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVillaContacts"
            android:background="@drawable/background_blur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/icVillaContacts"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_person"
                android:padding="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleVillaContacts"
                android:text="Villa Sakinleri"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/icVillaContacts"
                app:layout_constraintTop_toTopOf="@id/icVillaContacts"
                app:layout_constraintBottom_toBottomOf="@id/icVillaContacts"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btnClose"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_close"
            android:padding="10dp"
            android:background="@drawable/background_blur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSave"
            android:layout_marginEnd="10dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btnSave"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_save"
            android:padding="10dp"
            android:background="@drawable/background_blur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</eightbitlab.com.blurview.BlurView>