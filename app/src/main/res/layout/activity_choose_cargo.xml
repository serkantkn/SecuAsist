<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.MainActivity"
    android:background="@drawable/background_gradient"
    android:fitsSystemWindows="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_available_villas"
            tools:listitem="@layout/item_villa"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:paddingTop="100dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <LinearLayout
            android:id="@+id/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Villa listesi yükleniyor..."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/toolbar_shade"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Villa Seçin"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/blur_btn_close"
                app:layout_constraintEnd_toStartOf="@id/blur_btn_create_cargos"
                app:layout_constraintTop_toTopOf="@id/blur_btn_create_cargos"
                app:layout_constraintBottom_toBottomOf="@id/blur_btn_close"
                app:layout_constraintHorizontal_bias="0"/>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blur_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/background_blur"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/btnClose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_close"
                    android:padding="10dp"/>

            </eightbitlab.com.blurview.BlurView>

            <eightbitlab.com.blurview.BlurView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/blur_btn_create_cargos"
                android:background="@drawable/background_blur"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnCreateCargos">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleCreateCargos"
                        android:text="Kargoları Oluştur"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/icCreateCargos"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="16dp"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/icCreateCargos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_next"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </eightbitlab.com.blurview.BlurView>

            <eightbitlab.com.blurview.BlurView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selected_items_layout"
                android:background="@drawable/background_balloon"
                app:layout_constraintTop_toBottomOf="@id/blur_btn_close"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_selected_villas"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:orientation="horizontal"
                    app:spanCount="2"
                    tools:listitem="@layout/item_selected_villa"
                    android:clipToPadding="false"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"/>

            </eightbitlab.com.blurview.BlurView>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blur_searchbox"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/background_edittext"
                app:layout_constraintTop_toBottomOf="@id/selected_items_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_search"
                    android:hint="Villa Ara"
                    android:paddingStart="10dp"
                    android:paddingEnd="52dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btnClearBox"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|end"
                    android:padding="10dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />

            </eightbitlab.com.blurview.BlurView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bottom_shade"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>